<!DOCTYPE tiles-definitions PUBLIC
"-//ApacheSoftwareFoundation//DTDTilesConfiguration2.1//EN"
"http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<tiles-definitions>
  <definition name = "template"
    template="/WEB-INF/views/maintemplate.jsp">
    <put-attribute name = "top"
      value="/WEB-INF/views/tiles/header.jsp" />
    <put-attribute name = "side"
      value="/WEB-INF/views/tiles/footer.jsp" />
  </definition>
  <definition name = "home" extends="template">
    <put-attribute name = "content" value="/WEB-INF/views/home.jsp" />
  </definition>
</tiles-definitions>